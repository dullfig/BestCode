package agentos:tool@0.1.0;

world tool {
    record tool-metadata {
        name: string,
        description: string,
        semantic-description: string,
        request-tag: string,
        request-schema: string,
        response-schema: string,
        input-json-schema: string,
    }

    record tool-result {
        success: bool,
        payload: string,
    }

    export get-metadata: func() -> tool-metadata;
    export handle: func(request-xml: string) -> tool-result;
}
